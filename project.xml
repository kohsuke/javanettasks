<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <name>java.net tasks</name>
  <id>javanettasks</id>
  <currentVersion>1.0</currentVersion>
  
  <organization>
    <name>Kohsuke Kawaguchi</name>
    <url>http://www.kohsuke.org/</url>
    <logo>http://today.java.net/im/logo_java.gif</logo>
  </organization>
  
  <!--logo>http://dom4j.org/images/logo.gif</logo-->
  <inceptionYear>2003</inceptionYear>
 
  <package>org.kohsuke</package>
  
  
  <shortDescription>java.net tasks : java.net automation library/tools</shortDescription>
  <!--gumpRepositoryId>javanettasks</gumpRepositoryId-->

  <description>java.net tasks : java.net automation library/tools</description>
  
  <url>http://javanettasks.dev.java.net/</url>

  <cvsWebUrl>https://javanettasks.dev.java.net/source/browse/javanettasks/</cvsWebUrl>
  <cvsModule>javanettasks</cvsModule>
  <issueTrackingUrl>https://javanettasks.dev.java.net/servlets/ProjectIssues</issueTrackingUrl>

  <siteAddress>javanettasks.dev.java.net</siteAddress>
  <siteDirectory>/</siteDirectory>


  <repository>
    <connection>scm:cvs:pserver:guest@cvs.dev.java.net:/cvs:javanettasks</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.dev.java.net:/cvs:javanettasks</developerConnection>
    <url>https://javanettasks.dev.java.net/source/browse/javanettasks/</url>
  </repository>
   
  <mailingLists>
  
    <mailingList>
      <name>discussion list</name>
      <subscribe    >dev-subscribe@javanettasks.dev.java.net</subscribe>
      <unsubscribe>dev-unsubscribe@javanettasks.dev.java.net</unsubscribe>
      <archive>https://javanettasks.dev.java.net/servlets/SummarizeList?listName=dev</archive>
    </mailingList>
  
  </mailingLists>

  
  <developers>
    <developer>
      <name>Kohsuke Kawaguchi</name>
      <id>kohsuke</id>
      <email>kk@kohsuke.org</email>
      <organization>Sun Microsystems</organization>
    </developer>
    
  </developers>
  
  <dependencies>

    <dependency>
      <id>httpunit</id>
      <version>1.5.3</version>
    </dependency>

    <dependency>
      <id>xerces</id>
      <version>2.2.1</version>
    </dependency>

    <dependency>
      <id>rhino</id>
      <version>1.5R4-RC3</version>
      <jar>js-1.5R4-RC3.jar</jar>
    </dependency>

    <dependency>
      <id>jtidy</id>
      <version>4aug2000r7-dev</version>
    </dependency>

    <dependency>
      <id>nekohtml</id>
      <version>0.7.7</version>
    </dependency>

    <dependency>
      <id>ant</id>
      <version>1.5</version>
    </dependency>

    <!--dependency>
      <id></id>
      <version></version>
    </dependency-->

  </dependencies>
  
  <build>
    <sourceDirectory>src</sourceDirectory>
    <unitTestSourceDirectory>test</unitTestSourceDirectory>

    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
    
    <!-- Unit test classes -->
    <unitTest>
      <includes>
        <include>**/Test*.java</include>
      </includes>
    <resources>
      <resource>
        <directory>src/test</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.xsl</include>
          <include>**/*.rng</include>
          <include>**/*.dtd</include>
        </includes>
      </resource>
    </resources>
    </unitTest>
    
    <nagEmailAddress>kk@kohsuke.org</nagEmailAddress>
  </build>
  
  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-license-plugin</report>
    <!--report>maven-pmd-plugin</report-->
    <!--report>maven-tasklist-plugin</report-->
  </reports>
</project>
